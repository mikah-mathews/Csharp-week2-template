  <head>
    <meta charset="utf-8">
    <title>Pierre's Vendor Portal</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    @using PierresVendors.Models;

    <h3>Here are all the orders from this Vendor:</h3>
    
    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Details</a></li>
    }
    </ol>

    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a New Order</a></p>
    <p><a href='/vendors'>Return to category list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body>
</html>
